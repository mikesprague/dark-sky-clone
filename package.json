{
  "name": "dark-sky-clone",
  "version": "0.1.0",
  "description": "Clone of Dark SKy for Android App",
  "private": true,
  "engines": {
    "node": ">= 12.x",
    "npm": ">= 6.x"
  },
  "scripts": {
    "build": "npm run webpack && npm run lambda:build",
    "build:local": "npm run clean && npm run webpack && npm run lambda:build",
    "clean": "rm -rf ./build && rm -rf ./lambda",
    "lambda:build": "netlify-lambda build ./src/functions",
    "lambda:serve": "netlify-lambda serve ./src/functions --config ./functions.config.js",
    "start": "concurrently 'npm run webpack:serve' 'npm run lambda:serve' --names 'ðŸ“¦,ðŸ’»' --prefix '[{name}] ' --kill-others",
    "test": "echo \"Error: no test specified\" && exit 1",
    "webpack": "cross-env NODE_ENV=production webpack -p --colors",
    "webpack:dev": "cross-env NODE_ENV=development webpack -d --colors --display minimal",
    "webpack:serve": "cross-env NODE_ENV=development webpack-dev-server --keep-alive-timeout 0"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/dark-sky-clone"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "https://dark-sky.netlify.app",
  "license": "MIT",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.30",
    "@fortawesome/free-brands-svg-icons": "^5.14.0",
    "@fortawesome/free-solid-svg-icons": "^5.14.0",
    "@fortawesome/pro-duotone-svg-icons": "^5.14.0",
    "@fortawesome/react-fontawesome": "^0.1.11",
    "@hot-loader/react-dom": "^16.13.0",
    "@tailwindcss/typography": "^0.2.0",
    "@tippyjs/react": "^4.1.0",
    "axios": "^0.19.2",
    "cross-env": "^7.0.2",
    "dayjs": "^1.8.32",
    "dotenv": "^8.2.0",
    "he": "^1.2.0",
    "leaflet": "^1.6.0",
    "nanoid": "^3.1.12",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hot-loader": "^4.12.21",
    "react-leaflet": "^2.7.0",
    "register-service-worker": "^1.7.1",
    "snyk": "^1.370.1",
    "swr": "^0.3.0",
    "tailwindcss": "^1.6.2"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.11.0",
    "@babel/plugin-transform-object-assign": "^7.10.4",
    "@babel/plugin-proposal-export-default-from": "^7.10.4",
    "@babel/plugin-transform-runtime": "^7.11.0",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-react": "^7.10.4",
    "@babel/runtime": "^7.11.2",
    "@fullhuman/postcss-purgecss": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^3.9.0",
    "@typescript-eslint/parser": "^3.9.0",
    "autoprefixer": "^9.8.6",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "compression-webpack-plugin": "^4.0.1",
    "concurrently": "^5.3.0",
    "copy-webpack-plugin": "^6.0.3",
    "css-loader": "^4.2.1",
    "cssnano": "^4.1.10",
    "dompurify": "^2.0.12",
    "eslint": "^7.6.0",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-plugin-compat": "^3.8.0",
    "eslint-plugin-flowtype": "^5.2.0",
    "eslint-plugin-html": "^6.0.3",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-markdown": "^1.0.2",
    "eslint-plugin-react": "^7.20.5",
    "eslint-plugin-react-hooks": "^4.0.8",
    "eslint-plugin-security": "^1.4.0",
    "file-loader": "^6.0.0",
    "he": "^1.2.0",
    "html-webpack-plugin": "^4.3.0",
    "inquirer": "^6.5.2",
    "mini-css-extract-plugin": "^0.9.0",
    "nanoid": "^3.1.12",
    "netlify-cli": "^2.59.0",
    "netlify-lambda": "^2.0.1",
    "node-sass": "^4.14.1",
    "optimize-css-assets-webpack-plugin": "^5.0.3",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.0.5",
    "prettier-eslint": "^11.0.0",
    "prettier-stylelint": "^0.4.2",
    "sass-lint": "^1.13.1",
    "sass-loader": "^9.0.3",
    "style-loader": "^1.2.1",
    "terser-webpack-plugin": "^4.1.0",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpackbar": "^4.0.0",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "3.11.0",
    "workbox-webpack-plugin": "^5.1.3"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-transform-runtime",
      "@babel/plugin-proposal-class-properties",
      "@babel/plugin-transform-object-assign",
      "@babel/plugin-proposal-object-rest-spread",
      "@babel/plugin-proposal-export-default-from",
      "react-hot-loader/babel"
    ],
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "extends": [
      "airbnb",
      "react-app",
      "plugin:react-hooks/recommended"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "jsx-a11y",
      "markdown",
      "react",
      "react-hooks",
      "security"
    ],
    "parserOptions": {
      "parser": "babel-parser"
    },
    "rules": {
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "warn",
      "curly": "error",
      "object-curly-newline": "error",
      "semi": "error",
      "prefer-arrow-callback": "warn",
      "arrow-spacing": "error",
      "no-param-reassign": "warn",
      "eqeqeq": "error",
      "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
      ],
      "max-len": [
        "warn",
        {
          "code": 120,
          "tabWidth": 2,
          "ignoreUrls": true
        }
      ]
    }
  },
  "prettier": {
    "plugins": [
      "all"
    ],
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabwidth": true,
    "trailingComma": "all"
  }
}
